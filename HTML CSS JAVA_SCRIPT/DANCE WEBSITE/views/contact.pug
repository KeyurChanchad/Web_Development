extends base.pug

block scripts
  script(src='/static/index.js')

block style 
  style
    include ../static/style.css  
    include ../static/styleContact.css  

    
block content 
    h1 Contact Us
    div#formcontainer
      form(action="/contact", method="post", id="myform") 
        |Name : 
        input(type="text", class="myinput", name="name", placeholder="Enter your name:")
        |Phone : 
        input(type="phone", class="myinput", name="phone", placeholder="Enter phone number:")
        |Email : 
        input(type="email", class="myinput", name="email", placeholder="Enter your email:")
        |Age : 
        input(type="number", class="myinput", name="age", placeholder="Enter your age:")

        |Address  : 
        textarea(name="address", cols="30", rows="5", class="myinput") 
        button(type="submit", class="btn")
          |submit
        